@{
}
<!--Displays home button-->
<a asp-action="Index" asp-controller="Home" asp-route-teamid="" asp-route-team="" asp-route-pagenum="1"
   class="btn btn-block @(ViewBag.SelectedTeam == null ? "selected" : "btn-outline-secondary")" >Home</a>

@model IEnumerable<Team>

<!--Displays a team name for every team in the database-->
@foreach(Team x in Model)
{
    <a class="btn btn-block @(x.TeamName == ViewBag.SelectedTeam ? "selected" : "btn-outline-secondary")" asp-action="Index" asp-controller="Home" asp-route-teamname="@x.TeamName" asp-route-teamid ="@x.TeamId" asp-route-pagenum="1">@x.TeamName</a>
}
